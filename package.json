{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "scryfall-random",
  "title": "Scryfall Random Card",
  "description": "Returns a random Magic The Gathering card from Scryfall",
  "icon": "extension_icon.png",
  "author": "brendan_betts",
  "categories": [
    "Fun",
    "Other"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Get Random Card from Scryfall",
      "description": "Returns a random Magic The Gathering card from Scryfall",
      "mode": "view",
      "arguments": [
        {
          "name": "query",
          "placeholder": "Query",
          "required": false,
          "type": "text"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.72.0",
    "@raycast/utils": "^1.14.0",
    "@scryfall/api-types": "1.0.0-alpha.4",
    "commonmark": "^0.31.0",
    "node-fetch": "^3.3.2",
    "turndown": "^7.1.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vitest": "^1.5.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish",
    "test": "vitest"
  }
}